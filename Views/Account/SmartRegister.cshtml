@model WebApplication4.Models.RegisterViewModel
@{
    Layout = null;
}

<!doctype html>
<html>
<head>
    <title>Authentication Signup Form Flat Responsive widget Template :: w3layouts</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Validation Signup Form Responsive, Login form web template,Flat Pricing tables,Flat Drop downs  Sign up Web Templates, Flat Web Templates, Login signup Responsive web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>

    <link href="~/smartRegister/css/bootstrap.css" rel="stylesheet" type='text/css' media="all" />
    <link href="~/smartRegister/css/style.css" rel="stylesheet" type='text/css' media="all" />
</head>
<body>
    <h1 class="w3ls">Authentication Signup Form</h1>
    <div class="content-agileits">
        @using (Html.BeginForm("SmartRegister", "Account", FormMethod.Post, new {role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group w3layouts w3 w3l">
                @Html.LabelFor(m => m.FullName, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
            </div>
            <div class="form-group agileits w3layouts w3">
                @Html.LabelFor(m => m.Gender, new { @class = "control-label" })
                <div class="form-inline row">
                    <div class="form-group col-sm-6 agileits-w3layouts">
                        @Html.RadioButtonFor(m => m.Gender, true) @Html.Label("Male", new { @class = "control-label" })
                    </div>
                    <div class="form-group col-sm-6 w3-agile">
                        @Html.RadioButtonFor(m => m.Gender, false) @Html.Label("Female", new { @class = "control-label" })
                    </div>
                </div>
            
            </div>
            <div class="form-group agileits w3layouts w3">
                @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            </div>
            <div class="form-group agileits w3layouts w3">
                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="form-group agile agileits-w3layouts w3-agile">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                <div class="form-inline row">
                    <div class="form-group col-sm-6 agileits-w3layouts">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control"})
                        <div class="help-block">Minimum of 6 characters</div>
                    </div>
                    <div class="form-group col-sm-6 w3-agile">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password" })
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" style="width:100%;">Register</button>
            </div>
        }
    </div>
    <p class="copyright-w3ls">© 2017 Authentication Signup Form. All Rights Reserved | Design by <a href="https://w3layouts.com/" target="_blank">W3layouts</a></p>
    <!-- js files -->
    <script src="~/smartRegister/js/jquery-1.10.2.min.js"></script>
    <script src="~/smartRegister/js/bootstrap.min.js"></script>
    <script src="~/smartRegister/js/validator.min.js"></script>
    <!-- /js files -->
</body>
</html>
